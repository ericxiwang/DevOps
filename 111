---
- hosts: localhost
  become: true
  tasks:
    - name: git clone repo
      git:
        repo: https://github/com/ProblemSetters/devops-inventory.git
        dest: /tmp/devops-inventory
        version: 860334-ansible
    - name: do chmod
      file: /tmp/devops-inventory/script.sh  mode=0775

    - name: execute file
      shell: |
        sh /tmp/devops-inventory.s